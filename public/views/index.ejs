<!DOCTYPE html>
<html lang="es">

<head>
    <title>AW</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="./css/index.css" />
    <link rel="icon" href="./img/favicon.ico" />
    <link rel="stylesheet" href="./css/print.css" media="print" />
    <script src="index.js" type="text/javascript"></script>
</head>

<body>
    <div class="container">
        <div class="header">
            <div class="logo">
                <img src="./img/task.png" id="task-logo">
                <img src="./img/title.png" id="title-logo">
            </div>
            <div class="user">
                <img src="/imagenUsuario" class="user-avatar">
                <div class="user-info">
                    <h3><%=userEmail%></h3>
                    <a href="/logout" class="button disconnect-button">Desconectar</a>
                </div>
            </div>
        </div>
        <div class="main">
            <ul class="task-list">
                <% tasks.forEach(function(task) { %>
                <% if(task.done == 0) { %>
                <li class="task">
                    <h2>
                        <%= task.text %>
                    </h2>
                    <div class="tag-group">
                        <% task.tags.forEach(function(t) { %>
                        <div class="tag">
                            <%= t %>
                        </div>
                        <% }); %>
                    </div>
                    <button class="checkbox-button">
                        <a href=<%="/finish/" + task.id %>>Marcar finalizada</a>
                    </button>
                </li>
                <% } 
                else {%>
                <li class="task finalized">
                    <h2>
                        <%= task.text %>
                    </h2>
                </li>
                <% } %>
                <% }); %>

            </ul>
            <div class="task-adder">
                <form method="POST" action="/addTask" class="form">
                    <input type="text" name="new_task" required><br>
                    <button type="submit" class="add-button">Añadir
                </form>
            </div>
            <div class="task-deleter">
                <a href="/deleteCompleted">Eliminar tareas completadas</a>
            </div>
        </div>
    </div>
</body>

</html>